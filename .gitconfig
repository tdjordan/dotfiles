[alias]
	visual = !gitk
	st = status -s
	co = checkout
	ci = commit
	br = branch

	# log bases
	lg-base = log --graph --abbrev-commit
	lg-base-decorate = !git lg-base --decorate

	# log builds
	lg1 = !git lg-base-decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = !git lg-base-decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lg3 = !git lg-base-decorate --pretty=oneline --stat
	lg4 = !git lg-base --pretty=oneline --stat
[core]
	editor = vi
[push]
	default = simple
